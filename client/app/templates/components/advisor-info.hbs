<li class="advisor-info media">
    <span class="pull-left text-center">
        <img {{bind-attr src=advisorInfo.profileImageUrl}} class="img-circle media-object advisor-image" alt="avatar">
        <img {{bind-attr src=starRatingImageUrl}} alt="stars" border="0">
    </span>

    <div class="media-body">
        <div class="row">
          <div class="col-xs-6 col-md-8">
            <h4 class="media-heading">
                <span class="advisor-name">{{advisorInfo.advisorName}}</span>
                <small><i>{{advisorInfo.memberSince}} </i></small>
            </h4>
            <span class="advisor-long-desc inline-block">
              {{advisorInfo.description}}
            </span>
          </div>
          {{#if hasUserOffer}}
            <div class="col-xs-6 col-md-2 price-section">
                <div class="inline-block"><span class="minutes">{{advisorInfo.minutesOffered}}</span> mins</div>
                <span class="inline-block">
                  <span class="striked-price">${{advisorInfo.actualTotalPrice}}</span>
                    <span class="price">${{offerPrice}}</span>

                </span>
            </div>
          {{else}}
              <div class="col-xs-6 col-md-2 price-section">
              <span class="inline-block">
                  <span class="price">${{advisorInfo.pricePerMinute}}/min</span>
              </span>
              </div>
          {{/if}}
          <div class="col-xs-6 col-md-2">
              <button class="btn btn-success margin-bot">Call Now</button>
              <br />
              <button class="btn btn-success">Chat</button>

              <!-- <a href="http://keen.com"><img src="/images/button-call-now.png"/></a>
              <br/><br/>
              <a href="http://keen.com"><img src="/images/button-chat-now.png"/></a> -->
          </div>
        </div>

    </div>

</li>
